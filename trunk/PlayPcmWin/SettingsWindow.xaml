<Window x:Class="PlayPcmWin.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PlayPcmWin 詳細設定" Height="201" Width="574" Loaded="Window_Loaded">
    <Grid>
        <Button Content="OK" Margin="0,0,137,12" Name="buttonOK" Height="23" VerticalAlignment="Bottom" Click="buttonOK_Click" HorizontalAlignment="Right" Width="111" />
        <GroupBox Header="WASAPIに渡すPCMデータの量子化ビット数(ファイルをメモリに読み込む際に変換します)" Height="104" Margin="12,12,12,0" Name="groupBox1" VerticalAlignment="Top">
            <Grid>
                <RadioButton Content="ファイルの量子化ビット数に応じてSint16かSInt32かを選択" Height="16" Margin="6,6,6,0" Name="radioButtonBpsVariable" VerticalAlignment="Top" IsChecked="False" />
                <RadioButton Content="SInt16に固定する(24ビットのデータが来たら下位8ビットを切り捨てます)" Height="16" Margin="6,28,6,0" Name="radioButtonBpsSint16" VerticalAlignment="Top" />
                <RadioButton Content="SInt32に固定する(余った下位ビットは0埋め)" Height="16" Margin="6,50,6,0" Name="radioButtonBpsSint32" VerticalAlignment="Top" />
            </Grid>
        </GroupBox>
        <Button Content="キャンセル" Margin="0,0,12,12" Name="buttonCancel" Height="23" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="119" Click="buttonCancel_Click" />
    </Grid>
</Window>
